<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/store_location_for_registration"
            android:layout_width="353dp"
            android:layout_height="32dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="360dp"
            android:text="위치 : 천완"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/store_information_for_registration"
            android:layout_width="355dp"
            android:layout_height="200dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="472dp"
            android:text="메뉴명 : xxxx            가격 : xxxx"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/store_concept_for_registration"
            android:layout_width="353dp"
            android:layout_height="32dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="420dp"
            android:text="컨셉 : 조용    조명 : 어두움    종류 : 한식"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_registration_for_background"
            android:layout_width="414dp"
            android:layout_height="80dp"
            android:background="@color/teal_200"
            android:text="스탬프모아"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/view_image_for_registration"
            android:layout_width="365dp"
            android:layout_height="234dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="93dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <Button
            android:id="@+id/registration_for_registration"
            android:layout_width="93dp"
            android:layout_height="50dp"
            android:layout_marginStart="159dp"
            android:layout_marginTop="672dp"
            android:text="등록"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/title_check_for_background2"
        android:layout_width="414dp"
        android:layout_height="80dp"
        android:background="@color/teal_200"
        android:text="스탬프모아"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_check_for_background3"
        android:layout_width="414dp"
        android:layout_height="80dp"
        android:background="@color/teal_200"
        android:text="스탬프모아"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>